<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Metalytics" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary500</item>
    </style>

    <style name="Theme.Metalytics" parent="Base.Theme.Metalytics" />

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="background">@color/primary900</item>
        <item name="buttonBarNegativeButtonStyle">@style/negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
    </style>

    <style name="positive">
        <item name="android:textColor">@color/primary500</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="negative">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>
</resources>